<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EJS practice</title>
    <link rel="stylesheet" href="styles/styles.css">
</head>


<body>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        
       <% items.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= item._id %>">
                <p> <%= item.name %> </p>
            </div>
        </form>

       <% }); %>
    
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="button" value="<%= listTitle %>">+</button>
        </form>
    </div>


</body>
</html>